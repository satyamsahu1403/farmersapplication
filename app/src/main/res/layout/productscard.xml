<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_dashboard"
    android:backgroundTint="#1B3848">

    <ImageButton
        android:id="@+id/productimage"
        android:layout_width="132dp"
        android:layout_height="83dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/rounded_dashboard"
        android:backgroundTint="#607784"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/productname"
        android:layout_width="71dp"
        android:layout_height="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="65dp"
        android:text="Product name"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productimage" />

    <TextView
        android:id="@+id/productdetails"
        android:layout_width="131dp"
        android:layout_height="29dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="5dp"
        android:text="Product details is here you have to mention some..."
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productname" />

    <TextView
        android:id="@+id/productprice"
        android:layout_width="83dp"
        android:layout_height="27dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="5dp"
        android:text="000"
        android:textColor="#F0DC58"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productdetails" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circular_profile"
        android:layout_width="27dp"
        android:layout_height="28dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="5dp"
        android:clickable="true"
        android:src="@drawable/cartbutton"
        app:civ_border_color="#1B3848"
        app:civ_border_width="2dp"
        app:civ_scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/productprice"
        app:layout_constraintTop_toBottomOf="@+id/productimage" />

</androidx.constraintlayout.widget.ConstraintLayout>